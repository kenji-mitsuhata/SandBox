<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<!-- NicoMovieViewer -->
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controller.NMVController"
            prefWidth="300.0" prefHeight="80.0">

    <children>

        <!-- 動画ID -->
        <Label text="URL or ID" prefWidth="50.0"
               AnchorPane.topAnchor="12.0"
               AnchorPane.leftAnchor="8.0" />

        <!-- 動画IDテキストフィールド -->
        <TextField fx:id="movieNoField"
                   prefWidth="150.0"
                   AnchorPane.topAnchor="8.0"
                   AnchorPane.leftAnchor="70.0" />

        <!-- OKボタン -->
        <Button onAction="#handleOK"
                text="OK" prefWidth="60.0"
                AnchorPane.topAnchor="8.0"
                AnchorPane.rightAnchor="8.0" />

        <!--動画タイトルラベル -->
        <Label fx:id="titleField"
               prefWidth="260.0"
               AnchorPane.topAnchor="40.0"
               AnchorPane.leftAnchor="8.0" />
    </children>
</AnchorPane>